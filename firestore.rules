rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règles pour les rooms (parties)
    match /rooms/{roomId} {
      // Tout le monde peut lire une room (pour voir les participants)
      allow read: if true;
      
      // Seul le propriétaire peut créer/modifier une room
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                      request.auth.uid == resource.data.ownerId;
      
      // Seul le propriétaire peut supprimer
      allow delete: if request.auth != null && 
                      request.auth.uid == resource.data.ownerId;
      
      // Sous-collection des participants
      match /participants/{participantId} {
        allow read: if true;
        allow write: if request.auth != null && 
                       get(/databases/$(database)/documents/rooms/$(roomId)).data.ownerId == request.auth.uid;
      }
      
      // Sous-collection des assignations
      match /assignments/{userId} {
        // Chaque utilisateur ne peut lire QUE sa propre assignation
        allow read: if request.auth != null && request.auth.uid == userId;
        
        // Seul le propriétaire de la room peut créer les assignations
        allow write: if request.auth != null && 
                       get(/databases/$(database)/documents/rooms/$(roomId)).data.ownerId == request.auth.uid;
      }
      
      // Sous-collection des tokens (pour les liens magiques)
      match /tokens/{tokenId} {
        allow read: if true;
        allow write: if request.auth != null && 
                       get(/databases/$(database)/documents/rooms/$(roomId)).data.ownerId == request.auth.uid;
      }
    }
    
    // Règles pour les sessions utilisateurs
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
